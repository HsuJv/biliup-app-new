{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:image:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "fs:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://**"
        },
        {
          "url": "https://**"
        }
      ]
    },
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-confirm",
    {
      "identifier": "fs:default",
      "allow": [
        {
          "path": "$CONFIG/**"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:read-dirs",
      "allow": [
        {
          "path": "$CONFIG/**"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-copy-file",
      "allow": [
        {
          "path": "$CONFIG/**"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        {
          "path": "$CONFIG/**"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    "http:default",
    {
      "identifier": "opener:allow-open-url",
      "allow": [
        {
          "url": "https://*"
        }
      ]
    },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$CONFIG/**"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    }
  ]
}